<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView android:layout_weight="1" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="3px"
		android:layout_marginRight="3px">
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/login" />
			<EditText android:layout_height="wrap_content" android:id="@+id/txtLogin"
				android:layout_width="fill_parent" ></EditText>

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/pwd" />
			<EditText android:layout_height="wrap_content" android:id="@+id/txtPwd"
				android:layout_width="fill_parent" android:inputType="textPassword"></EditText>

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/account_player" />
			<Spinner android:layout_height="wrap_content" android:id="@+id/cbAccountPlayer"
				android:layout_width="fill_parent" android:inputType="textPassword"></Spinner>
		</LinearLayout>
	</ScrollView>

</LinearLayout>
